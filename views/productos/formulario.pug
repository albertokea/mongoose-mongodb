extends ../layout.pug 

block content
    h1 Inserta un nuevo producto
    form(action="/productos/create" method="POST")
        .form-group
            label(for="") Nombre
            input.form-control(type="text", name="nombre")
        .form-group
            label(for="") Precio
            input.form-control(type="text", name="precio")
        .form-group
            label(for="") Departamento
            input.form-control(type="text", name="departamento")
        .form-group
            label(for="") Imagen
            input.form-control(type="text", name="imagen")
        input.btn.btn-warning(type="submit", value="Enviar")